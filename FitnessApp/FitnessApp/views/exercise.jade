extends layout

block content
    div(class='form-group col-md-3')
        form(method="post" action="/createExercise")
          label(for="comment") Save an exercise
          br
          input(type="text", name="ExerciseName",  placeholder="ExerciseName" class='form-control')
          input(type="text", name="Description",  placeholder="Description" class='form-control')
          input(type="number", name="Set", placeholder="Set" class='form-control')
          input(type="text", name="RepetitionsTime",  placeholder="RepetitionsTime" class='form-control')
          input(type="submit", value="Save" class='btn btn-default')
    br 

    div
        table(class='table table-striped table-bordered table-hover')
            thead
                tr
                    th Exercise Name
                    th Decription
                    th Set
                    th Repetitions Time
            tbody
                each post in stuff
                    tr
                        td=post.ExerciseName 
                        td=post.Description
                        td=post.Set    
                        td=post.RepetitionsTime 
